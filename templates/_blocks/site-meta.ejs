    <% if(site.customConfig.rss) { %>
      <div class="sidebar-item">
        <span class="site-item-rss">
            <i class="fa fa-rss"></i>
            <a href="<%= themeConfig.domain %>/atom.xml" target="_blank">RSS</a>
        </span>
      </div>
    <% } else {%>
      <div class="sidebar-item" style="border-top: 1px dotted #ccc; margin-top: 10px;">
      </div>
    <% } %>
  <% } %>
  <% if ((site.customConfig.socials && site.customConfig.socials.length > 0) || (site.customConfig.imgSocials  && site.customConfig.imgSocials.length > 0)) { %>
    <div class="sidebar-item sidebar-item-social">
      <div class="social-item">
        <% if (site.customConfig.socials && site.customConfig.socials.length) { %>
          <% for(let i = 0; i < site.customConfig.socials.length; i++) { %>
            <a href="<%= site.customConfig.socials[i].socialLink %>">
              <i class="fa <%= site.customConfig.socials[i].socialIcon %>" title="<%= site.customConfig.socials[i].socialName %>"></i>
            </a>
          <% } %>
        <% } %>
        <% if (site.customConfig.imgSocials && site.customConfig.imgSocials.length) { %>
          <% for(let i = 0; i < site.customConfig.imgSocials.length; i++) { %>
            <a class="social-img" href="#">
              <img src="<%= site.customConfig.cdn %><%= site.customConfig.imgSocials[i].socialImg %>" />
              <i class="fa <%= site.customConfig.imgSocials[i].socialIcon %>" title="<%= site.customConfig.imgSocials[i].socialName %>" ></i>
            </a>
          <% } %>
        <% } %>
      </div>
    </div>
  <% } %>
<% if (!site.customConfig.enableFriendPage) { %>
  <% if (site.customConfig.friends && site.customConfig.friends.length > 0) { %>
    <div class="sidebar-item right-motion sidebar-item-friends">
      <% if (site.customConfig.friendsIcon && site.customConfig.friendsIcon !== '') { %>
        <p class="friends-title"><%= site.customConfig.friendsIcon %><%= site.customConfig.friendsTitle %></p>
      <% } else { %>
        <p class="friends-title"><i class="fa fa-ship"></i> <%= site.customConfig.friendsTitle %></p>
      <% } %>
      <div class="friends-box">
        <% for (let i = 0; i < site.customConfig.friends.length; i++) {%>
          <p>
            <a href="<%= site.customConfig.friends[i].siteLink %>"><%= site.customConfig.friends[i].siteName %></a>
          </p>
        <% } %>
      </div>
    </div>
  <% } %>
<% } %>
<% if (site.customConfig.bgMusic !== 'none' && site.customConfig.bgMusic === 'iframeLinks') { %>
  <div class="sidebar-item">
    <%- site.customConfig.iframeHtml %>
  </div>
<% } %>
</div>